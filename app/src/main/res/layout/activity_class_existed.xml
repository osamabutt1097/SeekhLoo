<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".ClassExistedActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/classroomtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="?attr/headercolor"

        />

    <FrameLayout
        android:layout_below="@id/classroomtoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/classframe"
        android:layout_marginBottom="55dp"
        >

    </FrameLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/class_navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="55dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?attr/bottomviewcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/class_navigation" />

</RelativeLayout>